<!doctype html>
<html>
<head>
    <title>Contact Auth</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">
    <div class="text-center bg-light white-bg">

    <h1 class="retroFont">Login</h1>

    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/login" method="post">
        <div class="form-group">
            <label class="retroFont">Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label class="retroFont">Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="logInButtons">Login</button>
    </form>

    <hr>

    <p>Need an account? <a href="/signup">Signup</a></p>
    <p>Or go <a href="/">home</a>.</p>


</div>
</div>
</body>
</html>
